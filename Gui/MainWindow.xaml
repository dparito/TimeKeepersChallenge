        <Grid Grid.Row="1">
            <DataGrid Name="dgWatches" ItemsSource="{Binding}" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="WatchId" Binding="{Binding WatchId}"/>
                    <DataGridTextColumn Header="Watch Name" Binding="{Binding WatchName}"/>
                    <DataGridTextColumn Header="Unit Price" Binding="{Binding UnitPrice}"/>
                </DataGrid.Columns>
            </DataGrid> 
        </Grid>

        <!--SUBMIT BUTTON-->
        <Grid Grid.Row="2">
            <Button
                Name="btnSubmit"
                HorizontalAlignment="Right" VerticalAlignment="Center"
                Content="Add To Cart"
                Command="{Binding AddToCartCommand}"/>
        </Grid>
        
        <!--TOTAL COST-->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
